{
    "name": "webgriffe/sylius-akeneo-plugin",
    "type": "sylius-plugin",
    "description": "Plugin allowing to import products data from Akeneo PIM to your Sylius store.",
    "keywords": [
        "sylius",
        "sylius-plugin"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "akeneo/api-php-client": "^11",
        "cocur/slugify": "^4.0",
        "guzzlehttp/guzzle": "^6.5 || ^7.6",
        "http-interop/http-factory-guzzle": "^1.0",
        "sylius/sylius": "^1.12.11 || ^1.13",
        "symfony/deprecation-contracts": "^2.2",
        "symfony/lock": "^5.4 || ^6.0",
        "symfony/webpack-encore-bundle": "^1.15"
    },
    "require-dev": {
        "ext-json": "*",
        "behat/behat": "^3.14",
        "behat/mink-selenium2-driver": "^1.6",
        "dbrekelmans/bdi": "^1.1",
        "dmore/behat-chrome-extension": "^1.4",
        "dmore/chrome-mink-driver": "^2.9",
        "friends-of-behat/mink": "^1.11",
        "friends-of-behat/mink-browserkit-driver": "^1.6",
        "friends-of-behat/mink-debug-extension": "^2.1",
        "friends-of-behat/mink-extension": "^2.7",
        "friends-of-behat/page-object-extension": "^0.3",
        "friends-of-behat/suite-settings-extension": "^1.1",
        "friends-of-behat/symfony-extension": "^2.4",
        "friends-of-behat/variadic-extension": "^1.3",
        "league/csv": "^9.8",
        "matthiasnoback/symfony-dependency-injection-test": "^4.3",
        "mikey179/vfsstream": "^1.6",
        "phpspec/phpspec": "^7.5",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-doctrine": "^1.3",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpstan/phpstan-webmozart-assert": "^1.2",
        "phpunit/phpunit": "^9.6 || ^10.5",
        "polishsymfonycommunity/symfony-mocker-container": "^1.0",
        "robertfausk/behat-panther-extension": "^1.1",
        "sylius-labs/coding-standard": "^4.3",
        "sylius-labs/suite-tags-extension": "^0.2",
        "symfony/browser-kit": "^5.4 || ^6.4",
        "symfony/debug-bundle": "^5.4 || ^6.4",
        "symfony/dotenv": "^5.4 || ^6.4",
        "symfony/flex": "^2.2.2",
        "symfony/intl": "^5.4 || ^6.4",
        "symfony/web-profiler-bundle": "^5.4 || ^6.4",
        "theofidry/alice-data-fixtures": "^1.1",
        "vimeo/psalm": "^5.21"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": false,
            "phpstan/extension-installer": true,
            "symfony/flex": true,
            "php-http/discovery": false
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.12-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Webgriffe\\SyliusAkeneoPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Webgriffe\\SyliusAkeneoPlugin\\": "tests/",
            "Tests\\Webgriffe\\SyliusAkeneoPlugin\\Sylius\\": "tests/Application/src/"
        },
        "classmap": [
            "tests/Application/Kernel.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php bin/create_node_symlink.php"
        ],
        "post-update-cmd": [
            "php bin/create_node_symlink.php"
        ],
        "post-create-project-cmd": [
            "php bin/create_node_symlink.php"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "security-checker security:check": "script"
        }
    }
}
